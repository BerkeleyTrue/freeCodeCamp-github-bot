{
  "name": "camper-gh-bot",
  "version": "1.0.0",
  "description": "A GitHub bot for sanity checks on freeCodeCamp's open source repositories.",
  "author": "freecodecamp <team@freecodecamp.org> (https://freecodecamp.org)",
  "keywords": [
    "Github",
    "bot"
  ],
  "license": "BSD-3-Clause",
  "repository": "https://github.com/freecodecamp/camper-gh-bot.git",
  "scripts": {
    "dev": "nodemon --exec \"npm start\"",
    "start": "probot run ./index.js",
    "lint": "standard --fix",
    "test": "jest && standard"
  },
  "dependencies": {
    "probot": "^6.0.0",
    "probot-app-commitlint": "ahmed-taj/commitlint-bot"
  },
  "probot": {
    "apps": [
      "probot-app-commitlint"
    ]
  },
  "devDependencies": {
    "jest": "^21.2.1",
    "nodemon": "^1.17.2",
    "smee-client": "^1.0.1",
    "standard": "^10.0.3"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  }
}
